<aura:component controller="messageGunController" implements="flexipage:availableForRecordHome,force:hasRecordId" access="global">

    <aura:attribute name="mcApiKey" type="String" required="true" />
    <aura:attribute name="messageBody" type="String" />
    <aura:attribute name="mcKeyword" type="String" required="true" />
    <aura:attribute name="mcClientId" type="String" required="true" />
    <aura:attribute name="mcClientSecret" type="String" required="true" />
    <aura:attribute name="mobileNumber" type="String" />
    <aura:attribute name="userId" type="Id" />

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <lightning:card iconName="utility:sms">
        <aura:set attribute="title">
            Direct SMS
        </aura:set>
        <aura:set attribute="footer">
            <lightning:layout horizontalAlign="space">
                <lightning:layoutItem flexibility="grow" padding="around-small" class="mcfooter">
                    &nbsp;
                </lightning:layoutItem>
            </lightning:layout>
        </aura:set>
        <aura:set attribute="actions">
            <lightning:button variant="brand" aura:id="submit" title="Enter a message and click send!" type="submit" label="Submit" onclick="{!c.sendSMS}"
            />
        </aura:set>
        <p class="slds-p-horizontal_small">
            <lightning:input aura:id="richText" name="richText" label="Message" value="{!v.messageBody}" maxlength="140" />
        </p>
    </lightning:card>

</aura:component>